#!/bin/sh

set -e

if [ "$1" = "configure" ]; then
    if grep -q ^kb_location /etc/openvas/openvassd.conf 2>/dev/null; then
	sed -i -e 's/kb_location=.*$/kb_location=\/var\/run\/redis-openvas\/redis-server.sock/' /etc/openvas/openvassd.conf
    else
	echo "kb_location=/var/run/redis-openvas/redis-server.sock" >> /etc/openvas/openvassd.conf
    fi
fi

